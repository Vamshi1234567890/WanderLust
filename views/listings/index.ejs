<% layout("/layouts/boilerplate") %>

<style>
  .filters{
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    overflow-y:auto;
    text-align: center;  
    width: 100vw;  
    justify-content: center;
    padding-right: 75px;
    margin-top: 1.3rem;
    

    overflow-y: scroll; /* Ensures the content can still scroll */
  scrollbar-width: none; /* For Firefox */
  -ms-overflow-style: none; /* For Internet Explorer and Edge */
    
    }

    .filter{
      text-align: center;
      opacity: .7;
      border-bottom: 2px solid rgba(255, 255, 255, 0);
      height: 4.5rem;
      margin-left: 3rem;
